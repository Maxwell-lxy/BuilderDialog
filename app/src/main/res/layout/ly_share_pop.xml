<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qq_share"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:src="@mipmap/socialize_qq"
            />

        <ImageView
            android:id="@+id/weixin_share"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@mipmap/socialize_weixin"
            />

        <ImageView
            android:id="@+id/weixin_wxcircle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@mipmap/socialize_weixin_circle"
            />

        <ImageView
            android:id="@+id/weibo_share"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@mipmap/socialize_weibo"
            />

    </LinearLayout>


</LinearLayout>